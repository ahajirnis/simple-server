<% if @users_requesting_approval.any? %>
  <h3>Users waiting for approval</h3>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Facilities</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users_requesting_approval.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.phone_number %></td>
          <td><%= user.facilities.map(&:name).join(", ") %></td>
          <td>
            <%= link_to "Approve Sync Access", admin_user_enable_access_path(user), method: :put, data: { confirm: I18n.t('admin.enable_access_alert') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<h3>Patients Registered</h3>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Facility Name</th>
      <th>Last 30 Days</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td><%= @patients_per_facility_30days[facility.id] %></td>
        <td><%= @patients_per_facility_total[facility.id] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
